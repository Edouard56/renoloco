<div class="wrapper_grey">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1 class="text-center">Mon tableau de bord</h1>
      </div>
    </div>
    <div class="dashboard-content">
      <div class="row">
        <div class="col-xs-12">
          <div class="dashboard-tabs">
            <div class="dashboard-tab">
              <%= link_to pros_dashboard_path do %>
                <h3>Mes demandes de devis</h3>
              <% end %>
            </div>
            <div class="dashboard-tab active">
              <h3>Mes prospects acceptés</h3>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="dashboard-match-type-of-informations">
            <div class="match-customer-name">
              <span>Prénom Nom</span>
            </div>
            <div class="match-customer-position">
              <span>Position dans la compagnie</span>
            </div>
            <div class="match-customer-telephone">
              <span>Téléphone</span>
            </div>
            <div class="match-customer-mail">
              <span>Mail</span>
            </div>
            <div class="match-company-name">
              <span>Nom société</span>
            </div>
            <div class="match-company-address">
              <span>Adresse</span>
            </div>
             <div class="match-work-description">
              <span>description</span>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="dashboard-match-informations">
            <% @matches.each do |match| %>
              <div class="match-infos">
                <div class="match-customer-name">
                  <%= match.customer.first_name %> <%= match.customer.last_name %>
                </div>
                <div class="match-customer-position">
                  <%= match.customer.position_in_company %>
                </div>
                <div class="match-customer-telephone">
                  <%= match.customer.mobile_phone_number %>
                </div>
                <div class="match-customer-mail">
                  <%= match.customer.email %>
                </div>
                <div class="match-company-address">
                  <%= match.customer.customer_address%>
                </div>
                <div class="match-work-description">
                  <%= match.customer.description %>
                </div>
                <div class="match-status-accepted">
                  <%= match.status %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="dashboard-match-type-of-informations">
            <div class="match-type-id">
              <span>réf devis</span>
            </div>
            <div class="match-type-id-date">
              <span>date du devis</span>
            </div>
            <div class="match-type-date">
              <span>Dates des travaux</span>
            </div>
            <div class="match-distance">
              <span>Distance</span>
            </div>
            <div class="match-surface">
              <span>Surface</span>
            </div>
            <div class="match-Type">
              <span>style</span>
            </div>
            <div class="match-status">
              <span>statut</span>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="dashboard-match-informations">
            <% @matches.each do |match| %>
              <div class="match-infos">
                <div class="match-id">
                  <span>réf n° : <%= match.id %></span>
                </div>
                <div class="match-date">
                  <%= l(match.created_at.to_date) %>
                </div>
                <div class="work-date">
                    <%= l(match.customer.starts_at.to_date) %>
                    <br>
                    <%= l(match.customer.ends_at.to_date) %>
                </div>
                <div class="match-distance">
                  <span><%= match.customer.distance_to(current_pro.address).to_i %> km</span>
                </div>
                <div class="match-surface">
                  <span><%= match.customer.needs_surface%> m 2</span>
                </div>
                <div class="match-Type">
                  <% if match.customer.customer_startup_style == true %>
                    <span>start-up</span>
                  <% end %>

                  <% if match.customer.customer_classical_style == true %>
                    <span>classique</span>
                  <% end %>

                  <% if match.customer.customer_modern_style == true %>
                    <span>moderne</span>
                  <% end %>
                </div>
                <div class="match-status">
                  <%= match.status %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
