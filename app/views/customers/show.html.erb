<%= content_for(:navbar_sec_not_here, true) %>
<%= content_for(:footer_not_here, true) %>

<div class="wrapper confirmation">
  <div class="container">
  <br>
    <div class="row">
      <div class="col-xs-12">
        <div class="text-description text-center">
          <h1>Merci pour ces informations <%= @customer.first_name %></h1>
          <h3 class="tagline"><strong> <%= @matching_matches.count %> </strong> sociétés ont des prestations qui correspondent à vos attentes, sélectionnez celles avec qui vous souhaitez être mis en relation !</h3>
        </div>
      </div>
    </div>
  </div>
</div>


<form action="/customers/<%= @customer.id %>/selection" method="post">
  <% i = 0 %>
  <% @matching_matches.each do |match| %>
    <ul>
      <li>Société : <%= match.pro.pro_company_name %></li>

      <% match.pro.photos_sup.each do |photo_sup| %>
        <%= cl_image_tag photo_sup.path, width: 400, height: 300, crop: :fill %>
      <% end %>
      <% match.pro.photos_old.each do |photo_old| %>
        <%= cl_image_tag photo_old.path, width: 400, height: 300, crop: :fill %>
      <% end %>

      <% match.pro.photos_new.each do |photo_new| %>
        <%= cl_image_tag photo_new.path, width: 400, height: 300, crop: :fill %>
      <% end %>
      <div class="checkbox">
        <label>
          <input type="checkbox" value="<%= match.pro.id %>" name="status_<%= i += 1%>">
          Je souhaite être mis en relation avec <%= match.pro.pro_company_name %>
        </label>
      </div>
    </ul>
  <% end %>
  <div class="container" id="espace-btn">
    <div class="row">
      <div class="col-xs-12 text-center">
        <input value="Je valide mes choix" type="submit" id="confirmation-btn" class="final-btn">
      </div>
    </div>
  </div>
</form>
